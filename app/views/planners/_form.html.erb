
<%= simple_form_for(@planner) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :profile_photo, as: :file, input_html: { multiple: false } %>
    <%= f.input :project_photos, as: :file, input_html: { multiple: true } %>
    <%= f.input :name %>
    <%= f.input :rating %>
    <%= f.input :description %>
    <%= f.input :short_description %>
    <%= f.input :price_range %>
    <%= f.input :services, as: :text, input_html: { multiple: true }, label: 'Services (separated by commas)' %>
    <%= f.association :user %>
    <%= f.input :latitude %>
    <%= f.input :longitude %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>
