                    <%= image_tag "wedding-ceremony-reception-celebration-romantic.jpg", class: "image" %>
                  <% end %>
                  <p class="hidden-text" style="color:white;"><%= planner.short_description %></p>
                </div>


                  <div class="card-description">
                    <h3 class="card-title space pt-2"><%=planner.name %></h3>
                  </div>

                  <div class="card-details justifiy-content-start">
