                    <%# <p class="card-info space"><%=listing.capacity people</p>  %>
                  </div>

                  <div class="card-details justifiy-content-end">
                    <p class="card-price space" style="color: black;">Â£ <%=planner.price_range %></p>
                    <p class="card-title space" style="color: black;"><%=planner.rating%> <i class="fas fa-star" style="color: black;"></i></p>
                  </div>
                  <%# <p>
                    <%= link_to "Show this listing", listing %>
                  <%# </p> %>

                </div>



              <% end %>
            </div>
          <% end %>


        <%= link_to "New planner", new_planner_path %>
  </div>
</div>
